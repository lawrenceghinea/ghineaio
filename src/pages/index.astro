  <!-- ========================= STYLES ========================= -->
  <style>
    /* Smooth scroll */
    html {
      scroll-behavior: smooth;
    }

    /* Background grid / noise */
    body {
      position: relative;
      --scrollParallax: 0px;
    }
    body::before {
      content: "";
      position: fixed;
      inset: 0;
      z-index: -2;
      background-image: linear-gradient(
          to right,
          rgba(255, 255, 255, 0.03) 1px,
          transparent 1px
        ),
        linear-gradient(
          to bottom,
          rgba(255, 255, 255, 0.03) 1px,
          transparent 1px
        );
      background-size: 80px 80px;
      opacity: 0.12;
      transform: translate3d(0, var(--scrollParallax), 0);
      pointer-events: none;
    }
    body::after {
      content: "";
      position: fixed;
      inset: 0;
      z-index: -1;
      background-image: radial-gradient(
        circle at 0 0,
        rgba(255, 255, 255, 0.1),
        transparent 55%
      );
      opacity: 0.25;
      pointer-events: none;
    }

    /* Avatar fine-tune */
    .avatar-img {
      transform: scale(1.2);
      object-position: center 1%;
    }

    /* ===== HERO ANIMATIONS ===== */
    @keyframes heroTopIn {
      from {
        opacity: 0;
        transform: translateY(-40px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    @keyframes heroTitleIn {
      from {
        opacity: 0;
        transform: translateY(40px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    @keyframes heroBottomIn {
      from {
        opacity: 0;
        transform: translateY(40px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Loading line */
    @keyframes loadLine {
      from {
        transform: scaleX(0);
      }
      to {
        transform: scaleX(1);
      }
    }
    #loading-screen.hide {
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.4s ease 0.15s;
    }

    /* ===== OBSERVER BASE STATE ===== */
    [data-observe] {
      opacity: 0;
      transform: translateY(40px);
      transition: opacity 0.6s ease, transform 0.6s ease;
    }
    [data-observe].in-view {
      opacity: 1;
      transform: translateY(0);
    }

    /* ===== CONNECT BUTTONS ===== */
    .connect-btn-left,
    .connect-btn-right {
      padding: 16px;
      text-align: center;
      border: 1px solid rgba(255, 255, 255, 0.12);
      background: rgba(255, 255, 255, 0.04);
      font-size: 17px;
      transition: background 0.25s ease, transform 0.2s ease;
    }
    .connect-btn-left:hover,
    .connect-btn-right:hover {
      background: rgba(255, 255, 255, 0.1);
      transform: translateY(-2px);
    }

    /* ===== SOCIAL ICONS ===== */
    .social {
      width: 40px;
      height: 40px;
      border: 1px solid rgba(255, 255, 255, 0.1);
      background: rgba(255, 255, 255, 0.05);
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 9999px;
      transition: background 0.25s ease, transform 0.2s ease;
    }
    .social:hover {
      background: rgba(255, 255, 255, 0.18);
      transform: translateY(-2px);
    }

    /* ===== PROGRESS LINE ===== */
    #nav-line {
      transform-origin: left;
      transform: scaleX(0);
      transition: transform 0.08s linear;
    }
  </style>

  <!-- ========================= JS ========================= -->
  <script>
    /* Scroll progress line + parallax grid */
    function updateNavLine() {
      const line = document.getElementById("nav-line");
      const docHeight =
        document.documentElement.scrollHeight - window.innerHeight;
      const scrollY =
        window.scrollY || document.documentElement.scrollTop || 0;
      const p = docHeight > 0 ? scrollY / docHeight : 0;
      if (line) {
        line.style.transform = `scaleX(${Math.min(1, Math.max(0, p))})`;
      }
      document.body.style.setProperty(
        "--scrollParallax",
        `${-scrollY * 0.04}px`
      );
    }

    /* Scroll observer for fade-up sections */
    function initObservers() {
      const elements = document.querySelectorAll("[data-observe]");
      if (!("IntersectionObserver" in window) || elements.length === 0) {
        elements.forEach((el) => el.classList.add("in-view"));
        return;
      }
      const obs = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add("in-view");
              obs.unobserve(entry.target);
            }
          });
        },
        { threshold: 0.2 }
      );
      elements.forEach((el) => obs.observe(el));
    }

    /* Cursor glow follow (centered on cursor) */
    function initCursorGlow() {
      const glow = document.getElementById("cursor-glow");
      if (!glow) return;

      let targetX = window.innerWidth / 2;
      let targetY = window.innerHeight / 2;
      let currentX = targetX;
      let currentY = targetY;
      const speed = 0.18;

      window.addEventListener("mousemove", (e) => {
        targetX = e.clientX;
        targetY = e.clientY;
        glow.style.opacity = "1";
      });

      function animate() {
        currentX += (targetX - currentX) * speed;
        currentY += (targetY - currentY) * speed;
        glow.style.left = currentX + "px";
        glow.style.top = currentY + "px";
        requestAnimationFrame(animate);
      }
      animate();
    }

    /* Live MST clock (uses local time but labeled MST) */
    function updateClock() {
  const el = document.getElementById("clock");
  if (!el) return;

  const tz = el.getAttribute("data-tz") || "America/Phoenix";
  const now = new Date();
  const timeStr = new Intl.DateTimeFormat([], {
    timeZone: tz,
    hour: "2-digit",
    minute: "2-digit",
  }).format(now);

  el.textContent = `MST · ${timeStr}`;
}


    /* Loading overlay */
    function initLoader() {
      const loader = document.getElementById("loading-screen");
      if (!loader) return;
      setTimeout(() => {
        loader.classList.add("hide");
        setTimeout(() => loader.remove(), 600);
      }, 600);
    }

    window.addEventListener("load", () => {
      updateNavLine();
      initObservers();
      initCursorGlow();
      initClockLoop();
      initLoader();
    });
    window.addEventListener("scroll", updateNavLine);

    function initClockLoop() {
      updateClock();
      setInterval(updateClock, 30000);
    }
  </script>
